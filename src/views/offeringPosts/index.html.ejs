<h2>Publicaciones de Oferta</h2>
<div class="search-container">  
  <form action="/offeringPosts" class="search-form">
    <div class="dropdown">
      <select class="dropbtn" name="category" id="category" class="custom-select sources" placeholder="Categoría">
        <option value="Todo">Todas las categorías</option>
        <option value="General">General</option>
        <option value="Tecnología">Tecnología</option>
      </select>
    </div>
      <br><br>

    <input type="text" name="search" placeholder="Buscar Post...">
    <div type="submit" value="Search" class="search"></div>
  </form>
</div>

<% if (!searchResult.length) { %>
  <p>No existen Resultados</p>

<% } else { %>
 
  <br>
  <div class="offeringPosts-list">
    <% searchResult.forEach((offeringPost) => { %>
      <div class="offeringPost">
        <% if (offeringPost.item.img) { %> <img class="offeringPost__image" src="<%= offeringPost.item.img%>"> <% } %>
        <div class="offeringPost__name">
            <a href="<%= showOfferingPostPath(offeringPost) %> "><%= offeringPost.item.name %></a>
        </div>
        <div class="offeringPost__content">
          <%= offeringPost.item.description %>
        </div>
        <div class="offeringPost__extras">
          <%= offeringPost.item.category %>
        </div>
      </div>
    <!-- <ol class="listHorizontal">
      <li><% if (offeringPost.item.img) { %> <img class="user" src="<%= offeringPost.item.img%>"> <% } %></li>
      <li><a href="<%= showOfferingPostPath(offeringPost) %> "><%= offeringPost.item.name %></a></li>
      <li>Fecha publicación: <%= offeringPost.createdAt.getDate() + '-' + offeringPost.createdAt.getMonth() + '-' + offeringPost.createdAt.getFullYear() %></li>
    </ol> -->
    <% }) %>
  </div>
  <br>
<% } %>

<% if(currentUser) {%><a href="<%= newOfferingPostPath %>" class="enlaceboton">Nueva Oferta</a><% } %>
<div> <a href="/">Volver</a> </div>


