<div class="search-container">
  <form action="/offeringPosts" class="search-form">
      <label for="category">Escoge una categoría:</label>
      <select name="category" id="category">
        <option value="Todo">Todo</option>
        <option value="General">General</option>
        <option value="Tecnología">Tecnología</option>
      </select>
      <br><br>
    <input type="search" name="search" placeholder="Buscar Post...">
    <button type="submit" value="Search"><i class="fa fa-search"></i></button>
  </form>
</div>

<h2>Posts de Ofertas</h2>
<% if (!searchResult.length) { %>
  <p>No hay resultados</p>
<% } else { %>
  <table id="offeringPosts-list">
    <thead>
      <tr>
        <th></th>
        <th>Nombre</th>
        <th>Categoría</th>
        <th>Fecha de término </th>
      </tr>
    </thead>
    <tbody>
      <% searchResult.forEach((offeringPost) => { %>
        <tr>
        <td><% if (offeringPost.item.img) { %> <img class="user" src="<%= offeringPost.item.img%>"> <% } %></td>
          <td><a href="<%= showOfferingPostPath(offeringPost) %> "><%= offeringPost.item.name %></a></td>
          <td><%= offeringPost.item.category %></td>
          <td><%= offeringPost.item.endsAt %></td>
          
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

<% if(currentUser) {%><a href="<%= newOfferingPostPath %>">Nuevo post de oferta</a><% } %>
<div> <a href="/">Atrás</a> </div>

