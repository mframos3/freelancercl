<div class="search-container">
  <form action="/offeringPosts" class="search-form">
    <p>Search by:</p>
    <input type="radio" id="category" name="type" value="category" checked>
    <label for="category">Category</label><br>
    <input type="radio" id="name" name="type" value="name">
    <label for="name">Name</label><br>
    <input type="search" name="search" placeholder="Search...">
    <button type="submit" value="Search"><i class="fa fa-search"></i></button>
  </form>
</div>

<h2>Posts de Ofertas</h2>
<% if (!offeringPostsList.length) { %>
  <p>No hay resultados</p>
<% } else { %>
  <table id="offeringPosts-list">
    <thead>
      <tr>
        <th></th>
        <th>Nombre</th>
        <th>Categoría</th>
        <th>Fecha de término </th>
      </tr>
    </thead>
    <tbody>
      <% offeringPostsList.forEach((offeringPost) => { %>
        <tr>
        <td><% if (offeringPost.img) { %> <img class="user" src="<%= offeringPost.img%>"> <% } %></td>
          <td><a href="<%= showOfferingPostPath(offeringPost) %> "><%= offeringPost.name %></a></td>
          <td><%= offeringPost.category %></td>
          <td><%= offeringPost.endsAt %></td>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

<% if(currentUser) {%><a href="<%= newOfferingPostPath %>">Nuevo post de oferta</a><% } %>
<div> <a href="/">Atrás</a> </div>

