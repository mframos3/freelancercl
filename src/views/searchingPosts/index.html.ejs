<div class="search-container">
  <form action="/searchingPosts" class="search-form">
    <p>Search by:</p>
    <input type="radio" id="category" name="type" value="category" checked>
    <label for="category">Category</label><br>
    <input type="radio" id="name" name="type" value="name">
    <label for="name">Name</label><br>
    <input type="search" name="search" placeholder="Search...">
    <button type="submit" value="Search"><i class="fa fa-search"></i></button>
  </form>
</div>

<h2>Posts de Búsqueda</h2>
<% if (!searchingPostsList.length) { %>
  <p>No hay resultados</p>
<% } else { %>
  <table id="searchingPosts-list">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Categoría</th>
        <th>Fecha de publicación</th>
        
      </tr>
    </thead>
    <tbody>
      <% searchingPostsList.forEach((searchingPost) => { %>
        <tr>
          <td><a href="<%= showSearchingPostPath(searchingPost) %>"><%= searchingPost.name %></a></td>
          <td><%= searchingPost.category %></td>
          <td><%= searchingPost.createdAt %></td>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

<% if (currentUser) { %><a href="<%= newSearchingPostPath %>">Nuevo post de búsqueda</a> <% } %>

<div> <a href="/">Atrás</a> </div>

