<div class="search-container">
  <form action="/searchingPosts" class="search-form">
      <label for="category">Escoge una categoría:</label>
      <select name="category" id="category">
        <option value="Todo">Todo</option>
        <option value="General">General</option>
        <option value="Tecnología">Tecnología</option>
      </select>
      <br><br>
    <input type="search" name="search" placeholder="Buscar Post...">
    <button type="submit" value="Search"><i class="fa fa-search"></i></button>
  </form>
</div>

<h2>Posts de Búsqueda</h2>
<% if (!searchResult.length) { %>
  <p>No hay resultados</p>
<% } else { %>
  <table id="searchingPosts-list">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Categoría</th>
        <th>Fecha de publicación</th>
        
      </tr>
    </thead>
    <tbody>
      <% searchResult.forEach((searchingPost) => { %>
        <tr>
          <td><a href="<%= showSearchingPostPath(searchingPost) %>"><%= searchingPost.item.name %></a></td>
          <td><%= searchingPost.item.category %></td>
          <td><%= searchingPost.item.createdAt %></td>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

<% if (currentUser) { %><a href="<%= newSearchingPostPath %>">Nuevo post de búsqueda</a> <% } %>

<div> <a href="/">Atrás</a> </div>

