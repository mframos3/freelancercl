<h2>Publicaciones de Búsqueda</h2>

<div class="search-container">
  <form action="/offeringPosts" class="search-form">
    <div class="dropdown">
      <select class="dropbtn" name="category" id="category" class="custom-select sources" placeholder="Categoría">
        <option value="Todo">Todas las categorías</option>
        <option value="General">General</option>
        <option value="Tecnología">Tecnología</option>
      </select>
    </div>
      <br><br>
    <input type="text" name="search" placeholder="Buscar Post...">
    <div type="submit" value="Search" class="search"></div>
  </form>
</div>

<% if (!searchResult.length) { %>
  <p>No hay resultados</p>
<% } else { %>
  <br>
  <% searchResult.forEach((searchingPost) => { %>
    <div id="searchingPosts-list"></div>
      <ol class="listHorizontal">
        <li><% if (searchingPost.item.img) { %> <img class="user" src="<%= searchingPost.item.img%>"> <% } %></li>
        <li><a href="<%= showSearchingPostPath(searchingPost) %> "><%= searchingPost.item.name %></a></li>
        <li>Fecha publicación: <%= searchingPost.item.createdAt.getDate() + '-' + searchingPost.item.createdAt.getMonth() + '-' + searchingPost.item.createdAt.getFullYear() %></li>
      </ol>
    </div>
    <br>
  <% }) %>
<% } %>

<% if (currentUser) { %><a href="<%= newSearchingPostPath %>" class="enlaceboton">Nuevo post de búsqueda</a> <% } %>

<div> <a href="/">Atrás</a> </div>

