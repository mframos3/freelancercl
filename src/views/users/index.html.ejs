<div class="search-container">
  <form action="/users" class="search-form">
    <input type="text" name="search" placeholder="Buscar Usuario...">
    <div type="submit" value="Search" class="search"></div>
  </form>
</div>


<h2>Users</h2>
<% if (!searchResult.length) { %>
  <p>No results</p>
<% } else { %>

  <br>
  <% searchResult.forEach((user) => { %>
    <div id="users-list"></div>
      <ol class="listHorizontal">
        <li><img class="user" src="<%= user.imagePath%>"></li>
        <li><a href="<%= showUserPath(user) %> "><%= user.name %></a></li>
        <li><%= user.email %></li>
        <li>Rating: <%= user.rating %></li>
        <li>Ocupaci√≥n: <%= user.occupation %></li>
      </ol>
    </div>
    <br>
  <% }) %>

<% } %>

<div> <a href="/">Back</a> </div>
