<table id="users-list">
  <thead>
    <tr>
      <th></th>
      <th>Nombre</th>
      <th>Email</th>
      <th>Valoración</th>
      <th>CV</th>
      <th>Ocupación</th>
      <% if (currentUser) { %>
      <th colspan="3">Acciones</th>
      <% } %>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><% if (user.imagePath) { %><img class="user" src="<%= user.imagePath %>" ><% } %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.rating %></td>
      <td><% if (user.cvPath) { %> <a href="<%= user.cvPath %>">Descargar CV</a> <% } %></td>
        <td><%= user.occupation %></td>
        <% if (currentUser && currentUser.id != user.id ) { %>
          <td><a href="<%= sendMessagePath %>">Enviar Mensaje</a></td>
        <% } %>
        <% if (currentUser && (currentUser.id == user.id || currentUser.isAdmin)) { %>
          <td><a href="<%= editUserPath %>">Editar</a></td>
        <% } %>
        <% if (currentUser && currentUser.isAdmin) { %>
        <td><form action="<%= deleteUserPath %>" method="POST">
            <input type="hidden" name="_method" value="delete" />
            <input type="submit" value="Delete" />
        <% } %>
        </form>
      </td>
      </tr>
  </tbody>
</table>

<% if (currentUser && currentUser.id == user.id) { %>
  <form action="<%= submitFilePath %>" enctype="multipart/form-data" method="post">
    <div class="field">
      <label for="CV">Selecciona CV</label>
      <input type="file" name="CV" />
    </div>
    <div class="field">
      <label for="img">Selecciona foto de perfil</label>
      <input type="file" name="img" />
    </div>
    <div class="field">
      <input type="submit" name="uploadFile" value="Upload" />
    </div>
    </form> 
<% } %>
<form action="<%= backPath %>" method="get">
  <input type="submit" value="Back" />
</form>
