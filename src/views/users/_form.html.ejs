<div>
  <% if (locals.errors) { %>
    <div class="errors">
      Tienes que solucionar los siguientes errores:
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.message %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>
  <form class="form-style-1" action="<%= submitUserPath %>" method="post">
    <% if (!user.isNewRecord) { %>
      <input type="hidden" name="_method" value="patch" />
    <% } %>
    <div  class="field">
      <label for="name">Nombre</label>
      <input type="text" name="name" value="<%= user.name %>" />
    </div>
    <div  class="field">
      <label for="email">Email</label>
      <input type="text" name="email" value="<%= user.email %>" />
    </div>
    <div  class="field">
      <label for="occupation">Ocupaci√≥n</label>
      <textarea type="text" name="occupation"><%= user.occupation %></textarea>
    </div>
    <div id="react-validation"> </div>
    <div  class="field">
      <% if (user.isNewRecord) { %>
        <input type="submit" name="create" value="Create" />
      <% } else { %>
        <input type="submit" name="update" value="Update" />
      <% } %>
    </div>
  </form>
</div>
