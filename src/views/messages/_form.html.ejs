    <form class="form-style-1" action="<%= submitMessagePath %>" method="post">
        <% if (!message.isNewRecord) { %>
          <input type="hidden" name="_method" value="patch" />
        <% } %>
        <div  class="field">
          <input type="hidden" name="sender_id" value="<%= currentUser.id %>"> </input>
        </div>
        <div  class="field">
          <input type="hidden" name="receiver_id" value="<%= receiverId %>"></input>
        </div>
        <div  class="field">
          <label for="message">Contenido</label>
          <textarea type="text" name="content"><%= message.content %></textarea>
        </div>
        <div  class="field">
          <% if (message.isNewRecord) { %>
            <input type="submit" name="create" value="Create" />
          <% } else { %>
            <input type="submit" name="update" value="Update" />
          <% } %>
        </div>
      </form>
</div>