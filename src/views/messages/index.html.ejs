<h2>Mensajes Recibidos</h2>
<% if (!messagesReceived.length) { %>
  <p>No messages</p>
<% } else { %>
    <table id="messages-list">
        <thead>
            <tr>
                <th>Sent by</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
            <% messagesReceived.forEach((message) => { %>
                <tr>
                    <td><%= message.username %> </td>
                    <td><%= message.content %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>

<h2>Mensajes Enviados</h2>
<% if (!messagesSent.length) { %>
  <p>No messages</p>
<% } else { %>
    <table id="messages-list">
        <thead>
            <tr>
                <th>Sent to</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
            <% messagesSent.forEach((message) => { %>
                <tr>
                    <td><%= message.username %> </td>
                    <td><%= message.content %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>
