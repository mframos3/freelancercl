<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>freelancerCL</title>
    <% if (env !== 'development') { %>
      <link rel="stylesheet" href="<%= assetPath('app.css') %>">
    <% } %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <header>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  </header>
  <ul class="topnav">
    <li><a class="active" href="/">Inicio</a></li>
    <li><a href="/offeringPosts">Publicaciones de Oferta</a></li>
    <li><a href="/searchingPosts">Publicaciones de Búsqueda</a></li>

    <% if (currentUser) { %>
      <% if( currentUser.isAdmin) { %>
        <li><a href="/reports">Denuncias</a></li>
        <% } %>
      <li><a href="/messages">Mensajes</a></li>
      <li><a href="<%='/users/'+ currentUser.id %>">Mi Perfil</a></li>        
    <% }%>
    <% if (!currentUser) { %>
      <li class="right"><a href="<%= newSessionPath %>">Iniciar sesión</a></li>
      <li class="right"><a href="<%= newRegisterPath %>">Registrarse</a></li>

    <% } else { %>
      <form action="<%= destroySessionPath %>" method="post">
        <input type="hidden" name="_method" value="delete" />
        <li class="right">
          <input type="submit" value="Logout" />
        </li>
      </form> 
    <% } %>
  </ul>
  <body>
    <%- body %>
    <script src="<%= assetPath('app.js') %>"></script>
  </body>

</html>
