<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>freelancerCL</title>
    <% if (env !== 'development') { %>
      <link rel="stylesheet" href="<%= assetPath('app.css') %>">
    <% } %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <ul class="topnav">
      <li><a class="active" href="/">Home</a></li>
      <li><a href="/users">Users</a></li>
      <li><a href="/offeringPosts">Offering Jobs Posts</a></li>
      <li><a href="/searchingPosts">Searching Jobs Posts</a></li>
      <% if (currentUser) { %>
        <% if( currentUser.isAdmin) { %>
          <li><a href="/reports">Reports</a></li>
          <% } %>
        <li><a href="/messages">Messages</a></li>
        <li><a href="<%='/users/'+  currentUser.id %>">Mi Perfil</a></li>        
      <% }%>
      <% if (!currentUser) { %>
        <li class="right"><a href="<%= newSessionPath %>">Login</a></li>
        <li class="right"><a href="<%= newRegisterPath %>">Register</a></li>
      <% } else { %>
        <form action="<%= destroySessionPath %>" method="post">
          <input type="hidden" name="_method" value="delete" />
          <li class="right">
            <input type="submit" value="Logout" />
          </li>
        </form> 
      <% } %>
      <!-- <div class="search-container">
        <form action="/searchResults" class="search-form">
          
          <input type="checkbox" name="togBtn" id="togBtn">
          <input type="search" name="search" placeholder="Search...">
          <button type="submit" value="Search"><i class="fa fa-search"></i></button>
        </form>
      </div> -->


    </ul>
    <header>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    </header>
    <%- body %>
    <script src="<%= assetPath('app.js') %>"></script>
    <!-- <input type="button" value="Back" onclick="history.back()"/> -->
  </body>

</html>
